<h1>Bill History</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.amount %></td>
        <td><%= bill.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to "View", bill_path(bill) %></td>
      </tr>
    <% end %>
  </tbody>
</table>