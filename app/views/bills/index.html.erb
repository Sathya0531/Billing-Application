<h1>Bill History</h1>

<div class="actions">
  <%= link_to "New Bill", new_bill_path, class: "btn btn-primary" %>
</div>

<hr>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Customer Email</th>
      <th>Net Price</th>
      <th>Amount Paid</th>
      <th>Balance</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= bill.customer_email %></td>
        <td>₹<%= bill.net_price.round(2) %></td>
        <td>₹<%= bill.amount_paid %></td>
        <td>₹<%= bill.balance.round(2) %></td>
        <td><%= link_to "View", bill_path(bill), class: "btn btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>