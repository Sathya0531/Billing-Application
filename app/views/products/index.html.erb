<h1>Products</h1>

<%= link_to "Add Product", new_product_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th>Stock</th>
    <th>Price</th>
    <th>Tax %</th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.product_code %></td>
      <td><%= product.stock %></td>
      <td><%= product.unit_price %></td>
      <td><%= product.tax_percentage %></td>
    </tr>
  <% end %>
</table>