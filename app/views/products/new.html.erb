<h1>Add Product</h1>

<%= form_with model: @product do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :product_code %>
    <%= f.text_field :product_code %>
  </p>
  
  <p>
    <%= f.label :stock %>
    <%= f.number_field :stock %>
  </p>
  
  <p>
    <%= f.label :unit_price %>
    <%= f.number_field :unit_price, step: :any %>
  </p>
  
  <p>
    <%= f.label :tax_percentage %>
    <%= f.number_field :tax_percentage, step: :any %>
  </p>
  
  <%= f.submit %>
<% end %>

<%= link_to "Back", products_path %>