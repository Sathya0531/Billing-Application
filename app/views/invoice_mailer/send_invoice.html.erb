<h1>Invoice</h1>

<p>Customer: <%= @bill.customer_email %></p>
<p>Date: <%= @bill.created_at.strftime("%Y-%m-%d") %></p>

<h3>Items:</h3>
<% @bill.bill_items.each do |item| %>
  <p><%= item.product.name %> - Qty: <%= item.quantity %> - Price: <%= item.total_price %></p>
<% end %>

<p><strong>Total: <%= @bill.net_price %></strong></p>
<p><strong>Amount Paid: <%= @bill.amount_paid %></strong></p>
<p><strong>Balance: <%= @bill.balance %></strong></p>